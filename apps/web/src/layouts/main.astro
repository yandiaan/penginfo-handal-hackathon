---
import '@/styles/global.css';

interface Props {
  title?: string;
}

const { title = 'ADIS AI' } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="ADIS AI - Modular Content Generation Engine" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  html {
    overflow: hidden;
  }

  body {
    margin: 0;
    padding: 0;
    height: 100vh;
    overflow: hidden;
  }
</style>
