---
import '@/styles/global.css'
import { RainEffect } from '@/components/landing/components/RainEffect';
import { BlueprintNav } from './components/BlueprintNav';
import { GetStartedButton } from './components/GetStartedButton';
import { DynamicPanel } from './components/DynamicPanel';
---

<html lang="en">
  <head>
    <link href="https://fonts.googleapis.com/css?family=Roboto:400,700&display=swap" rel="stylesheet" />
    <!-- Tailwind CSS replaces custom styles -->
  </head>
  <body class="bg-[#181818] text-white font-['Roboto'] m-0 overflow-hidden">
    <img 
      src="/line-white-2.svg" 
      alt="line white" 
      class="absolute inset-0 w-full h-full object-cover z-0 pointer-events-none translate-x-110" 
    />
      <!-- Header -->
      <header class="flex items-center h-[15vh] px-8">
        <img src="/logo.svg" alt="Logo" class="w-12 mr-4" />
        <h1 class="text-5xl font-bold m-0">ADIS AI</h1>
      </header>
      <!-- Main Content -->
      <main class="flex flex-row px-8 h-[75vh]">
        <!-- Sidebar Kiri -->
        <aside class="w-80 flex flex-col justify-between h-full">
          <div>
            <p class="text-base mb-8">
              Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s
            </p>
          </div>
          <div class="flex flex-col grow justify-center pt-[10%]">
              <h3 class="text-lg mb-2 text-left self-start -mt-[40%]">The Blueprint:</h3>
           <div class="flex justify-center w-full">
            <BlueprintNav client:load /> 
          </div>
          </div>
        </aside>
          <section class="flex-1 flex items-center ml-24 mb-8 justify-end relative bg-[#232323] bg-cover bg-center" style="background-image: url('/background-about.jpg');">
            <RainEffect client:load />
            <DynamicPanel client:load />
          </section>
           <img 
            src="/line-white-2.svg" 
            alt="line white" 
            class="absolute inset-0 w-full h-full object-cover z-0 pointer-events-none translate-x-130" 
          />
        <div class="w-20 bg-transparent"></div>
      </main>
      <!-- Bottom Bar -->
      <footer class="w-full flex flex-row items-center justify-between py-4 px-8 bg-transparent h-[10vh]">
        <div class="flex flex-col items-start justify-center w-80">
          <span class="text-sm mb-2">Powered by:</span>
          <div class="flex gap-6">
            <img src="/logo-alibaba.svg" alt="Alibaba Cloud" class="h-14" />
            <img src="/logo-qwen.svg" alt="Star" class="h-12" />
          </div>
        </div>
        <div class="flex flex-col items-center justify-center flex-1">
          <GetStartedButton />
          <div class="text-center text-base mt-2 text-gray-400 font-['Roboto']">Try for free</div>
        </div>
        <div class="flex flex-col items-end justify-center w-80">
          <div class="text-right text-gray-400 text-sm max-w-xs font-['Roboto']">
            Lorem Ipsum is simply dummy text of the printing and typesetting industry.
          </div>
        </div>
      </footer>
    </div>
  </body>
</html>
